<Page x:Class="Axios.RadioPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"

      Title="Radio" Height="Auto" Width="Auto"
      Background="#15151C"
      FontFamily="/Assets/Fonts/Roboto-Medium.ttf #Roboto">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/CustomStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0" Color="#FF6B635A"/>
                <GradientStop Offset="1" Color="#FF2B2B2B"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Rectangle Grid.Column="0"
                   Grid.Row="9"
                   Grid.RowSpan="2"
                   Grid.ColumnSpan="7"
                   Width="Auto"
                   Fill="#992B2B2B">
        </Rectangle>

        <!--FIRST ROW-->
        <TextBox Name="SearchTextBox"
                 Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="3"
                 Style="{StaticResource TextBoxCustomStyle}"
                 Margin="10,10,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 VerticalContentAlignment="Center"
                 Width="280"
                 Height="24"
                 MaxLength="42"
                 PreviewKeyDown="SearchTextBox_PreviewKeyDown">
        </TextBox>

        <ToggleButton Name="SearchBtn"
                Grid.Row="1"
                Grid.Column="3"
                Style="{StaticResource ToggleButtonCustomStyle}"
                ToolTip="Search"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Height="24" Width="40"
                Margin="0,10,0,0"
                Click="SearchBtn_OnClick">
            <Image Name="SearchBtnIcon"
                   Source="/Assets/search.png"
                   Width="16"
                   Height="16"
                   RenderOptions.BitmapScalingMode="Fant"/>
        </ToggleButton>

        <ToggleButton Name="Top100Btn"
                Grid.Row="1"
                Grid.Column="4"
                Style="{StaticResource ToggleButtonCustomStyle}"
                Content="• Top 100"
                ToolTip="Show Top 100 Stations"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Height="24" Width="78"
                Margin="0,10,0,0"
                Click="Top100Btn_OnClick">
        </ToggleButton>

        <ToggleButton Name="FavoriteBtn"
                Grid.Row="1"
                Grid.Column="6"
                Style="{StaticResource ToggleButtonCustomStyle}"
                Content="My Favorites"
                ToolTip="Show My Favorite Stations"
                Margin="-4,10,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Height="24" Width="94"
                Click="FavoriteBtn_OnClick">
        </ToggleButton>

        <!--DATA GRID-->
        <Border Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="7"
                Grid.RowSpan="7"
                BorderBrush="#FD7014"
                Background="#EEEEEE"
                BorderThickness="1"
                CornerRadius="5"
                Padding="0"
                Margin="10,0,10,10">
            <DataGrid Margin="2,2,2,2" 
                      Name="StationsDataGrid" 
                      ScrollViewer.CanContentScroll="False"
                      GridLinesVisibility="None" 
                      HeadersVisibility="Column" 
                      AutoGenerateColumns="False" 
                      SelectionMode="Single" 
                      CanUserAddRows="False" 
                      IsReadOnly="True"
                      CanUserReorderColumns="False"
                      CanUserResizeRows="False"
                      MouseDoubleClick="StationsDataGrid_MouseDoubleClick"
                      PreviewKeyDown="StationsDataGrid_PreviewKeyDown"
                      LoadingRow="StationsDataGrid_LoadingRow"
                      Background="#EEEEEE" 
                      BorderBrush="Transparent"
                      CellStyle="{StaticResource DataGridCellCustomStyle}"
                      ColumnHeaderStyle="{StaticResource DataGridColumnHeaderCustomStyle}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem 
                                Name="FavoriteAddBtn"
                                Style="{StaticResource DataGridContextMenuItemCustomStyle}"
                                Header="Add to favorites"
                                Click="MenuItem_Add_Click">
                            <MenuItem.Icon>
                                <Image Width="16" Height="16" Source="/Assets/favorite.png"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem 
                                Name="FavoriteRemoveBtn"
                                Style="{StaticResource DataGridContextMenuItemCustomStyle}"
                                Header="Remove"
                                Click="MenuItem_Remove_Click">
                            <MenuItem.Icon>
                                <Image Width="16" Height="16" Source="/Assets/exit.png"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </Border>

        <Button Name="PrevDataGridPageBtn"
                Grid.Row="9"
                Grid.Column="5"
                Style="{StaticResource ButtonCustomStyle}"
                Margin="0,12,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Height="24" Width="30"
                ToolTip="Previous page"
                Click="PrevDataGridPageBtn_OnClick">
            <Image Source="/Assets/arrowBack.png"
                   Width="16"
                   Height="10"
                   RenderOptions.BitmapScalingMode="Fant"/>
        </Button>

        <Label Name="CurrentDataGridPageLabel"
               Grid.Column="7"
               Width="66"
               Grid.Row="9"
               Content="1"
               FontWeight="Medium"
               FontSize="16"
               Foreground="LightGray"
               HorizontalContentAlignment="Center"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="-8,10,0,0">
        </Label>

        <Button Name="NextDataGridPageBtn"
                Grid.Row="9"
                Grid.Column="7"
                Style="{StaticResource ButtonCustomStyle}"
                ToolTip="Next Page"
                Margin="0,12,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Height="24" Width="30"
                Click="NextDataGridPageBtn_OnClick">
            <Image Source="/Assets/arrowForward.png"
                   Width="16"
                   Height="10"
                   RenderOptions.BitmapScalingMode="Fant"/>
        </Button>

        <!--PLAYER-->
        <Image Name="StationFavIconImg"
               Grid.Row="9"
               Grid.Column="0"
               Grid.RowSpan="2"
               HorizontalAlignment="Left"
               Height="80"
               Width="80"
               Margin="10,10,0,0"
               VerticalAlignment="Top"
               Source="/Assets/logo.png"
               RenderOptions.BitmapScalingMode="Fant">
        </Image>

        <TextBlock Name="NowPlayingLabel"
               Grid.Row="9"
               Grid.Column="1"
               Grid.ColumnSpan="2"
               Grid.RowSpan="2"
               Text="Pick your station!"
               TextWrapping="Wrap"
               HorizontalAlignment="Left"
               Margin="10,10,0,0"
               VerticalAlignment="Top"
               FontSize="14"
               Width="180"
               Height="80"
               Foreground="LightGray"
               FontWeight="Medium">
        </TextBlock>

        <Label Name="PlayerStatusLabel"
               Grid.Row="9"
               Grid.Column="3"
               Content=""
               HorizontalAlignment="Center"
               HorizontalContentAlignment="Center"
               VerticalAlignment="Center"
               FontSize="14"
               Width="80"
               Height="30"
               Foreground="LightGray"
               FontWeight="Medium">
        </Label>

        <Button Name="PrevStationBtn"
                Grid.Row="10"
                Grid.Column="3"
                Style="{StaticResource ButtonCustomStyle}"
                Margin="0,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="PrevStationBtn_OnClick"
                Height="32" Width="30">
            <Image Source="/Assets/skipPrevious.png"
                   Width="16"
                   Height="16"
                   RenderOptions.BitmapScalingMode="Fant"/>
        </Button>

        <Button Name="StopPlayerBtn"
                Grid.Row="10"
                Grid.Column="3"
                Style="{StaticResource ButtonCustomStyle}"
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="StopPlayerBtn_OnClick"
                Height="32" Width="40">
            <Image Name="StopPlayerImg"
                   Source="/Assets/play.png"
                   RenderOptions.BitmapScalingMode="Fant"/>
        </Button>

        <Button Name="NextStationBtn"
                Grid.Row="10"
                Grid.Column="3"
                Style="{StaticResource ButtonCustomStyle}"
                Margin="0,0,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="NextStationBtn_OnClick"
                Height="32" Width="30">
            <Image Source="/Assets/skipNext.png"
                   Width="16"
                   Height="16"
                   RenderOptions.BitmapScalingMode="Fant"/>
        </Button>

        <Image Name="AudioImg"
               ToolTip="Mute"
               Grid.Row="10"
               Grid.Column="4"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0,8,80,0"
               Width="21"
               Height="21"
               Source="/Assets/volume.png"
               RenderOptions.BitmapScalingMode="Fant"
               PreviewMouseLeftButtonDown="AudioImg_OnPreviewMouseLeftButtonDown">
        </Image>

        <Slider Name="AudioSlider"
                Grid.Row="10"
                Grid.Column="5"
                Grid.ColumnSpan="2"
                Style="{DynamicResource CustomSlider}" HorizontalAlignment="Left"
                Margin="20,10,0,0"
                VerticalAlignment="Top"
                Width="140"
                ToolTip="Volume"
                Maximum="100"
                Minimum="0"
                ValueChanged="AudioSlider_ValueChanged"
                TickFrequency="1"
                IsSnapToTickEnabled="true">
        </Slider>

        <Label Name="AudioVolumeLabel"
               Grid.Row="10"
               Grid.Column="6"
               Content="0"
               FontSize="16"
               Foreground="LightGray"
               HorizontalAlignment="Right"
               Margin="0,4,5,0"
               VerticalAlignment="Top"
               ToolTip="Current Volume"
               Width="38" Height="25">
        </Label>
    </Grid>
</Page>
